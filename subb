                    // Send payment status to Firebase
                    database.ref('payments').push({
                      status: 'success',
                      amount: payload.amount,
                      transaction_id: payload.transaction_id
                    });
                    
                    // Display success message to user
                    console.log(payload);
                    alert("Payment Succesfull");
                },
